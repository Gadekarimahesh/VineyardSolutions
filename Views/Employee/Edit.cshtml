@model IEnumerable<VineYardSolutionsTask.Models.Employee>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Scripts/ValidationandAjaxCalling.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>

    <h4>Employee</h4>
    <hr />
    <form action="@Url.Action("Edit", "Employee")"  method="post">
        @foreach (var Model in Model)
        {
            <label>Employee ID</label>
            <input type="text" id="EmployeeID" name="EmployeeID" value="@Model.EmployeeID" readonly />

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Enter Employee Name</label>
                        <input name="EmpName" id="EmpName" value="@Model.Empname" class="form-control" />
                        <span class="text-danger" id="EmpNameError"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Enter Email Address</label>
                        <input name="Email" id="Email" value="@Model.Email" class="form-control" />

                        <span class="text-danger" id="EmailError"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Work Phone</label>
                        <input name="WorkPhone" id="WorkPhone" value="@Model.WorkPhone" class="form-control" />
                        <span class="text-danger" id="WorkPhoneError"></span>

                    </div>

                    <div class="form-group">
                        <label class="control-label">Cell Phone</label>
                        <input name="CellPhone" value="@Model.CellPhone" id="CellPhone" class="form-control" />
                        <span class="text-danger" id="CellPhoneError"></span>

                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Enter Current Address</label>
                        <input name="EmpCurrentAddress" value="@Model.EmpCurrentAddress" id="EmpCurrentAddress" class="form-control" />
                        <span class="text-danger" id="EmpCurrentAddressError"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Enter Permanent Address</label>
                        <input name="EmpPermanentAddress" id="EmpPermanentAddress" value="@Model.EmpPermanentAddress" class="form-control" />
                        <span class="text-danger" id="EmpPermanentAddressError"></span>

                    </div>

                    <div class="form-group">
                        <label class="control-label">Select Date of Birth</label>
                        <input name="EmpDob" id="EmpDob" value="@Model.EmpDob.ToString("yyyy-MM-dd")" type="date" class="form-control" />
                        <span class="text-danger" id="EmpDobError"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Age</label>
                        <input name="Age" id="Age" value="@Model.Age" class="form-control" />
                        <span class="text-danger" id="EmpAgeError"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Select Date of Joining</label>
                        <input name="EmpDOJ" value="@Model.EmpDOJ.ToString("yyyy-MM-dd")" id="EmpDOJ" type="date" class="form-control" />
                        <span class="text-danger" id="EmpDOJError"></span>

                    </div>

                    <div class="form-group">
                        <label class="control-label">Select Gender</label>

                        <div>
                            <label>
                                <input type="radio" name="Gender" class="gender" value="Male" @(Model.Gender == "Male" ? "checked" : "") />
                                Male
                            </label>
                        </div>

                        <div>
                            <label>
                                <input type="radio" name="Gender" class="gender" value="Female" @(Model.Gender == "Female" ? "checked" : "") />
                                Female
                            </label>
                        </div>
                        <div>
                            <label>
                                <input type="radio" name="Gender" class="gender" value="Other" @(Model.Gender == "Other" ? "checked" : "") />
                                Other
                            </label>
                        </div>



                        <span class="text-danager" id="genderError"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Job Title</label>
                        <input name="Jobtitle" id="Jobtitle" value="@Model.Jobtitle" class="form-control" />
                        <span class="text-danager" id="JobtitleError"></span>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Select Department</label>
                        <select name="DepartmentId" id="DepartmentId" class="form-control">
                            <option value="">--Select department--</option>
                            @foreach (var item in @ViewBag.departmentlist)
                            {
                                if (@item.DepartmentID == Model.DepartmentId)
                                {
                                    <option value="@item.DepartmentID" selected>@item.DepartmentName</option>
                                }
                                else
                                {
                                    <option value="@item.DepartmentID">@item.DepartmentName</option>
                                }

                            }
                        </select>
                        <span class="text-danager" id="DepartmentIdError"></span>

                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Select other Department</label>
                        <select name="OtherDepartmentId" id="OtherDepartmentId" class="form-control">
                            <option value="">--Select Other details--</option>
                            @foreach (var item in @ViewBag.OtherDepartment)
                            {
                                if (@item.OtherDepartmentID == Model.otherDepartmentId)
                                {
                                    <option value="@item.OtherDepartmentID" selected>@item.OtherDepartmentName</option>
                                }
                                else
                                {
                                    <option value="@item.OtherDepartmentID">@item.OtherDepartmentName</option>
                                }

                            }
                        </select>
                        <span class="text-danager" id="OtherDepartmentIdError"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Select Country</label>
                        <select name="CountryID" id="CountryId" class="form-control">
                            <option value="">Select Country</option>
                            @foreach (var item in @ViewBag.Countrieslist)
                            {
                                if (@item.countryID == Model.CountryID)
                                {
                                    <option value="@item.countryID" selected>@item.countryName</option>
                                }
                                else
                                {
                                    <option value="@item.countryID">@item.countryName</option>
                                }

                            }
                        </select>
                        <span class="text-danager" id="CountryIdError"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Select State</label>
                        <select name="StateID" class="form-control" id="statedropdown">
                            <option value="">--select State--</option>
                            @foreach (var item in ViewBag.StatesList)
                            {
                                if (@item.stateID == Model.StateID)
                                {
                                    <option value="@item.stateID" selected>@item.stateName</option>
                                }
                                else
                                {
                                    <option value="@item.stateID">@item.stateName</option>
                                }

                            }
                        </select>
                        <span class="text-danager" id="StateIdError"></span>
                    </div>
                </div>
            </div>

        }


        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnSubmit" value="Update" class="btn btn-warning" />
            </div>
        </div>
    </form>

        <div>
            <a href="@Url.Action("Index")">Back to List</a>
        </div>

    </body>
</html>
